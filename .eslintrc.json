{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:node/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": "error",
        "arrow-body-style": "off",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "camelcase": "off",
        "strict": "off",
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "node/no-extraneous-require": [
            "error",
            {
                "allowModules": [],
                "resolvePaths": [],
                "tryExtensions": []
            }
        ]
    }
}